{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["DOM", "ES2015", "ES2016", "ES2017", "ES2018", "ES2019", "ES2020"],
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@meeting-room/shared/*": ["src/*"]
    }
  },
  "include": ["src", "types/**/*.d.ts"]
}
